package com.wallmart.service;


import com.wallmat.model.FindAvailableResponse;
import com.wallmat.model.FindAndHoldRequest;
import com.wallmat.model.FindAndHoldResponse;


public class TicketingServiceImpl implements TicketingService {
	
	TicketingServiceImplHelper ticketingServiceImplHelper = new TicketingServiceImplHelper();
	
	@Override
	public FindAvailableResponse findNoOfSeatsAvilable() {
		
		return ticketingServiceImplHelper.findNoOfSeatsAvilable();
	}

	@Override
	public FindAndHoldResponse findAndHoldSeats(FindAndHoldRequest request) {
		
		return ticketingServiceImplHelper.findAvilableSeatAndHeld(request);
			
	}

	@Override
	public FindAndHoldResponse reserveAndCommitSeats(FindAndHoldRequest request) {
		
		return ticketingServiceImplHelper.reserveAndCommit(request);
		
		
	}
	
	
	@Override
	public FindAndHoldResponse holdSeats(FindAndHoldRequest request) {
		
		return ticketingServiceImplHelper.holdSeats(request);
		
		
	}

	public void displayStage(){
		
		ticketingServiceImplHelper.displayStage();

	}

}
